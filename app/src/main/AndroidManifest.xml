<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.har.materialcompat">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".BaseWidgetsActivity"
      android:label="@string/title_base_widgets"
      android:parentActivityName=".MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.har.materialcompat.MainActivity"/>
    </activity>
    <activity
      android:name=".CollapsingToolBarActivity"
      android:label="@string/title_activity_collapsing_tool_bar"
      android:parentActivityName=".MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.har.materialcompat.MainActivity"/>
    </activity>
  </application>

</manifest>
